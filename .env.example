# VICE Logger Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
EXPO_PUBLIC_APP_ENV=development

# API Configuration
EXPO_PUBLIC_API_URL=https://api.example.com
EXPO_PUBLIC_API_TIMEOUT=30000

# Discord Configuration
EXPO_PUBLIC_DISCORD_CLIENT_ID=your_discord_client_id
EXPO_PUBLIC_DISCORD_REDIRECT_URI=your_redirect_uri

# AI Backend Configuration
EXPO_PUBLIC_OPENAI_API_URL=https://api.openai.com/v1
EXPO_PUBLIC_ANTHROPIC_API_URL=https://api.anthropic.com

# Local AI Configuration
EXPO_PUBLIC_OLLAMA_URL=http://localhost:11434
EXPO_PUBLIC_LM_STUDIO_URL=http://localhost:1234

# Security Configuration
EXPO_PUBLIC_ENCRYPTION_ENABLED=true
EXPO_PUBLIC_AUDIT_LOGGING=true

# Feature Flags
EXPO_PUBLIC_ENABLE_GLITCH_EFFECTS=true
EXPO_PUBLIC_ENABLE_SOUNDSCAPE=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Development Configuration
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_WEBSOCKET=true
EXPO_PUBLIC_MOCK_AI_RESPONSES=true

# Analytics (optional)
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_ANALYTICS_API_KEY=your_analytics_key

# Sentry Error Reporting (optional)
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_SENTRY_ENABLED=false